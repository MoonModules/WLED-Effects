//show hour, minute and second as pixel

program Clock
{

  function renderFrame() 
  {
    setRange(0,ledCount, 0)         //clear all pixels

    //set h, m, s dots
    setPixelColor(hour, colorFromPalette(25))
    setPixelColor(minute, colorFromPalette(125))
    setPixelColor(second, colorFromPalette(225))
  }

}